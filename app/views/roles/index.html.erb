<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>  

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= check_box_tag :active, "true", false, id: "check_box", data: { remote: true, method: :patch, url: "/roles/#{role.id}"} %></td>
        <td><%= role.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

